INSTALLATION_DIR=$1
BINARY_VERSION=v<%= binary_version %>
DEST_DIR=$INSTALLATION_DIR/node-${BINARY_VERSION}-linux-x64
FILENAME=node-${BINARY_VERSION}.tar.gz
TAR_URL=https://nodejs.org/dist/${BINARY_VERSION}/$FILENAME

template_steps(){
  if [[ `lsb_release -r` == *10.04* ]]; then
    ./configure --shared-openssl-libpath=/lib/ --prefix=/
  elif [[ `lsb_release -r` == *14.04* ]]; then
    ./configure --shared-openssl --prefix=/
  fi

  make -j 3 install DESTDIR=$DEST_DIR PORTABLE=1
  #LICENSE seems to be already included with the tar file, so commenting this out
  #cp LICENSE $DEST_DIR
}

main "$@"
